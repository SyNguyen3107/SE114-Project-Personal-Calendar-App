<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.synguyen.se114project.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_addEditFragment"
            app:destination="@id/addEditFragment" />
        <action
            android:id="@+id/action_homeFragment_to_taskDetailFragment"
            app:destination="@id/taskDetailFragment" />
    </fragment>

    <!-- CẬP NHẬT TẠI ĐÂY: Thêm action cho ScheduleFragment -->
    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.synguyen.se114project.ui.schedule.ScheduleFragment"
        android:label="Schedule"
        tools:layout="@layout/fragment_schedule">
        <!-- Action chuyển sang màn hình Chi tiết -->
        <action
            android:id="@+id/action_scheduleFragment_to_taskDetailFragment"
            app:destination="@id/taskDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.synguyen.se114project.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/addEditFragment"
        android:name="com.synguyen.se114project.ui.addedit.AddEditFragment"
        android:label="Add Task"
        tools:layout="@layout/fragment_add_edit" />

    <fragment
        android:id="@+id/taskDetailFragment"
        android:name="com.synguyen.se114project.ui.taskdetail.TaskDetailFragment"
        android:label="Task Detail"
        tools:layout="@layout/fragment_task_detail">
        <argument
            android:name="taskId"
            android:defaultValue="-1L"
            app:argType="long" />
    </fragment>

</navigation>