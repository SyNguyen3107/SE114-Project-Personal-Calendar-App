<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_course_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Accent bar -->
        <View
            android:id="@+id/view_accent"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="#1565C0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Course name -->
        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Java Developing"
            android:textColor="#212121"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/view_accent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Description -->
        <TextView
            android:id="@+id/tv_course_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Chapter 1: Introduction to Java Programming"
            android:textColor="#616161"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_course_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Time chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="11:35 - 13:05"
            android:textSize="12sp"
            app:chipBackgroundColor="#E3F2FD"
            app:chipIconTint="#1565C0"
            app:chipStrokeColor="#1565C0"
            app:chipStrokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/tv_course_description"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Teacher avatar -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_teacher_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chip_time"/>

        <!-- Teacher name -->
        <TextView
            android:id="@+id/tv_teacher_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Brooklyn Williamson"
            android:textColor="#424242"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/img_teacher_avatar"
            app:layout_constraintTop_toTopOf="@id/img_teacher_avatar"
            app:layout_constraintBottom_toBottomOf="@id/img_teacher_avatar"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
