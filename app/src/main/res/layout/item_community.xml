<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Community Icon / Initial -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F1F4FF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_forum_24"
                app:tint="@color/holo_blue_dark" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Community Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintStart_toEndOf="@id/cardIcon"
            app:layout_constraintEnd_toStartOf="@id/btnEnterChat"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvCommunityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Community Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tvCommunityDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Short description"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"/>

        </LinearLayout>

        <!-- Blue Arrow Button (Matching your request) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnEnterChat"
            android:layout_width="44dp"
            android:layout_height="36dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/holo_blue_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_send_24"
                app:tint="@color/white" />

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>